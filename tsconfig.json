{
    "compilerOptions": {
        "newLine": "LF",
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "outDir": "build",
        "rootDir": ".",
        "lib": [
            "dom",
            "es2017",
            "dom.iterable",
            "scripthost",
            "esnext.asynciterable"
        ],
        "strict": false,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "build",
        "node_modules"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
